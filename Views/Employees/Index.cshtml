@using AlexWebApp.Models.EmployeeViewModels
@model IEnumerable<Employee>
<a asp-action="Create" asp-controller="Employees" class="btn btn-sm btn-info">Create New Employee</a>
<table class="table table-bordered table-striped">
  <thead>
  <tr class="text-center">
    <td>Title</td>
    <td>Name</td>
    <td>Salary</td>
    <td>Location</td>
    <td>Action</td>
  </tr>
  </thead>
  <tbody>

  @foreach (var employee in Model)
  {
      <tr class="text-center">
        <td>@employee.Title</td>
        <td>@employee.Name</td>
        <td>@employee.Salary</td>
        <td>@employee.Location</td>
        <td>
          @Html.ActionLink("Edit", "Edit", "Employees", new {@id = @employee.EmployeeId},
             new {@class = "btn btn-link"})
          <button type="button" class="btn btn-link">Details</button>
          <button type="button" class="btn btn-link">Delete</button>
        </td>
      </tr>
  }
  </tbody>

</table>